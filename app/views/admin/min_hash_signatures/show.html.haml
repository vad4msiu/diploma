.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_min_hash_signatures_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_min_hash_signature_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_min_hash_signature_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_min_hash_signature.token", :default => t("activerecord.labels.token", :default => "Token"))
          \:
        = @min_hash_signature.token
      %p
        %b
          = t("activerecord.attributes.admin_min_hash_signature.document_id", :default => t("activerecord.labels.document_id", :default => "Document"))
          \:
        = @min_hash_signature.document_id
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_min_hash_signature_path(@min_hash_signature), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_min_hash_signature_path(@min_hash_signature), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
