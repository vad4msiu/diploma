.block
  .content
    %h2.title Загрузка текста
    .inner
      = form_tag admin_check_similarity_path, :class => 'form', :multipart => true do
        .group
          = label :type, "с помощью:", :class => 'label'
        .group
          = select_tag :type, options_for_select(%w(shingle super-shingle mega-shingle min-hash i-match).map {|i| [i, i]})
        .group          
          = check_box_tag :web, true, false, :class => 'checkbox'
          = label :type, "искать в интеренет", :class => 'checkbox'
        .group
          = label :type, "из файла:", :class => 'label'
        .group
          = file_field_tag :file
        .group
          = label :type, "или", :class => 'label'
        .group
          = text_area_tag :content, params[:content], :class => 'text_area', :rows => 20
        .group.navform.wat-cf
          %button.button{:type => "submit"}
            = image_tag("/web-app-theme/icons/tick.png")
            Проверить