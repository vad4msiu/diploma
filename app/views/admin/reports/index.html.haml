.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_reports_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_report_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Reports
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.admin_report.similarity", :default => t("activerecord.labels.similarity", :default => "Similarity"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @reports.each do |report|
          %tr{:class => cycle("odd", "even")}
            %td
              = report.id
            %td
              = link_to report.similarity, admin_report_path(report)
            %td
              = report.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_report_path(report)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_report_path(report)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_report_path(report), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
        = will_paginate @reports
- content_for :sidebar, render(:partial => 'sidebar')
