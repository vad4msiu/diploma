.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_documents_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_document_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Documents
    .inner
      %table.table
        %tr
          %th.first ID
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @documents.each do |document|
          %tr{:class => cycle("odd", "even")}
            %td
              = link_to document.id, admin_document_path(document)
            %td
              = document.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_document_path(document)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_document_path(document)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_document_path(document), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
        = will_paginate @documents
- content_for :sidebar, render(:partial => 'sidebar')
