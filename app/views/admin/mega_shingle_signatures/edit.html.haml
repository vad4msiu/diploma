.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_mega_shingle_signatures_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_mega_shingle_signature_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_mega_shingle_signature_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      MegaShingleSignature
    .inner
      = form_for @mega_shingle_signature, :url => admin_mega_shingle_signature_path(@mega_shingle_signature), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
