!!!
%html
  %head
    %title Web App
    = stylesheet_link_tag 'web_app_theme'
    = javascript_include_tag 'application'
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{:href => "/"} Diplom
        / #user-navigation
        /   %ul.wat-cf
        /     %li
        /       %a{:href => "#"}= t("web-app-theme.profile", :default => "Profile")
        /     %li
        /       %a{:href => "#"}= t("web-app-theme.settings", :default => "Settings")
        /     %li
        /       %a.logout{:href => "/logout"}= t("web-app-theme.logout", :default => "Logout")
        #main-navigation
          %ul.wat-cf
            %li
              = link_to '小heck the similarity (Shingles)', admin_similarity_shingles_path
            %li
              = link_to '小heck the similarity (SimHash)', admin_similarity_sim_hash_path
            %li
              = link_to '小heck the similarity (SuperShingle)', admin_similarity_super_shingles_path
          
            / %li
            /   = link_to '小heck the similarity (I-Match)', admin_similarity_i_match_path            
            %li
              = link_to 'Documents', admin_documents_path
            %li
              = link_to 'Shingle signatures', admin_shingle_signatures_path
            %li
              = link_to 'SimHash signatures', admin_min_hash_signatures_path
            %li
              = link_to 'Super shingle signatures', admin_super_shingle_signatures_path
          
            / %li
            /   = link_to 'Words', admin_words_path
            / %li
            /   = link_to 'I-Match signatures', admin_i_match_signatures_path
        
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
        #sidebar
          = yield :sidebar
